/* 全局样式 */
page {
  background-color: #f5f7fa;
  font-family: '微软雅黑', Arial, sans-serif;
  padding: 20px;
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-content {
  background-color: white;
  border-radius: 12px;
  padding: 30px;
  max-width: 80%;
  max-height: 80%;
  overflow-y: auto;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

.popup-title {
  color: #2c3e50;
  margin-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
  display: block;
}

.popup-message {
  margin-bottom: 30px;
  text-align: justify;
  line-height: 1.6;
}

.popup-text {
  margin-bottom: 15px;
  color: #34495e;
  display: block;
  font-size: 13px;
}

.popup-button {
  padding: 12px 30px;
  background-color: #3498db;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 16px;
}

.popup-button:active {
  background-color: #1f618d;
}

/* 容器样式 */
.container {
  max-width: 1080px;
  margin: 0 auto;
  text-align: center;
}

/* 头部样式 */
.header {
  margin-bottom: 20px;
}

.title {
  color: #2c3e50;
  font-size: 20px;
  font-weight: bold;
  display: block;
}

.subtitle {
  color: #2c3e50;
  font-size: 20px;
  font-weight: bold;
  display: block;
  margin-top: 5px;
}

/* 抖音信息样式 */
.douyin-info {
  background-color: #e74c3c;
  color: white;
  padding: 8px;
  border-radius: 8px;
  margin-bottom: 10px;
  font-weight: bold;
  display: inline-block;
  font-size: 14px;
}

/* 版本选择器样式 */
.version-switcher {
  margin-bottom: 20px;
  text-align: center;
}

.section-title {
  display: block;
  margin-bottom: 10px;
  color: #34495e;
  font-weight: bold;
}

.version-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
}

.version-button {
  padding: 6px 12px;
  border: 1px solid #3498db;
  border-radius: 15px;
  background-color: white;
  color: #3498db;
  font-size: 12px;
  transition: all 0.3s ease;
}

.version-button.active {
  background-color: #3498db;
  color: white;
  font-weight: bold;
}

/* 密码组样式 */
.hour-password-group {
  border: 2px solid #3498db;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 30px;
  background-color: rgba(255, 255, 255, 0.9);
}

.hour-indicator {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
  color: #34495e;
}

.highlight {
  color: #e74c3c;
  font-weight: bold;
}

.password-group {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.password-card {
  background: white;
  border-radius: 12px;
  padding: 30px 20px;
  box-shadow: 0 4px 18px rgba(0, 0, 0, 0.08);
}

.card-title {
  color: #34495e;
  display: block;
  margin-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
}

.password-value {
  font-size: 32px;
  color: #e74c3c;
  font-weight: bold;
  letter-spacing: 2px;
  font-family: 'DS-DIGI ITC', monospace;
  display: block;
  margin-bottom: 10px;
}

.instructions {
  font-size: 0.9em;
  color: #666;
  padding-left: 20px;
  display: block;
  margin-top: 10px;
}

/* 序列号输入样式 */
.serial-number-input {
  margin-bottom: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  width: 100%;
}

.serial-number-input input {
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 10px;
  width: 100%;
  max-width: 200px;
  font-size: 16px;
  text-align: center;
  height: 44px;
  box-sizing: border-box;
}

.calculate-button {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #3498db;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  height: 40px;
  box-sizing: border-box;
  text-align: center;
  line-height: 20px;
  white-space: nowrap;
  min-width: 120px;
}

/* 切换按钮样式 */
.toggle-button {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #3498db;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  height: 40px;
  box-sizing: border-box;
  text-align: center;
  line-height: 20px;
  white-space: nowrap;
  min-width: 120px;
}

/* 更新信息样式 */
.update-info {
  color: #7f8c8d;
  font-size: 16px;
  padding: 15px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8px;
  display: inline-block;
}

.car-instructions {
  margin-top: 5px;
  font-size: 0.9em;
  color: #e74c3c;
  font-weight: bold;
  display: block;
}

.notes {
  font-size: 0.9em;
  color: #e74c3c;
  display: block;
  margin-top: 5px;
}
