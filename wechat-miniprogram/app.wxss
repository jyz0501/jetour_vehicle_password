/* 全局样式 */
page {
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
}

.container {
  padding: 20rpx;
  max-width: 100%;
  margin: 0 auto;
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-content {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.popup-message {
  margin-bottom: 30rpx;
}

.popup-text {
  display: block;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-bottom: 15rpx;
  color: #666;
  text-align: justify;
}

.popup-button {
  width: 100%;
  height: 80rpx;
  background-color: #1E88E5;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.douyin-info {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 版本选择器样式 */
.version-switcher {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.version-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.version-button {
  flex: 1;
  min-width: 150rpx;
  height: 70rpx;
  border: 2rpx solid #ddd;
  border-radius: 35rpx;
  background-color: white;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.version-button.active {
  background-color: #1E88E5;
  color: white;
  border-color: #1E88E5;
}

/* 小时密码组样式 */
.hour-password-group {
  margin-bottom: 40rpx;
}

.hour-indicator {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.highlight {
  color: #1E88E5;
  font-weight: bold;
}

.password-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.password-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.password-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E88E5;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.instructions {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

/* 序列号输入样式 */
.serial-number-input {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.serial-number-input input {
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
}

.calculate-button {
  height: 80rpx;
  background-color: #1E88E5;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 密码容器样式 */
.password-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.toggle-button {
  height: 60rpx;
  border: 2rpx solid #1E88E5;
  border-radius: 30rpx;
  background-color: white;
  color: #1E88E5;
  font-size: 22rpx;
  padding: 0 20rpx;
  min-width: 150rpx;
}

/* 更新信息样式 */
.update-info {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}
