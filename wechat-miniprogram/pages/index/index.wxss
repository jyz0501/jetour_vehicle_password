/* 页面级样式 */

/* 容器样式 */
.container {
  padding: 20rpx;
  max-width: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.popup-content {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
  display: block;
  width: 100%;
}

.popup-message {
  margin-bottom: 30rpx;
  width: 100%;
}

.popup-text {
  display: block;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-bottom: 15rpx;
  color: #666;
  text-align: justify;
}

.popup-button {
  width: 100%;
  height: 80rpx;
  background-color: #1E88E5;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  width: 100%;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  text-align: center;
}

.douyin-info {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
  width: 100%;
}

/* 版本选择器样式 */
.version-switcher {
  margin-bottom: 40rpx;
  width: 100%;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  display: block;
  text-align: center;
}

.version-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}

.version-button {
  flex: 1;
  min-width: 150rpx;
  height: 60rpx;
  background-color: #1E88E5;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 22rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.3s ease;
}

.version-button.active {
  background-color: #1976D2;
  color: white;
  border-color: #1976D2;
}

/* 小时密码组样式 */
.hour-password-group {
  border: 2rpx solid #1E88E5;
  border-radius: 12rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  width: 100%;
  box-sizing: border-box;
}

.hour-indicator {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  text-align: center;
}

.highlight {
  color: #1E88E5;
  font-weight: bold;
}

.password-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.password-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 18rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #34495e;
  display: block;
  text-align: center;
}

.password-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E88E5;
  margin-bottom: 10rpx;
  word-break: break-all;
  display: block;
  text-align: center;
}

.instructions {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
  display: block;
  text-align: center;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

/* 密码容器样式 */
.password-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

/* 更新信息样式 */
.update-info {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  width: 100%;
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .version-button {
    font-size: 22rpx;
    padding: 0 15rpx;
  }
  
  .password-value {
    font-size: 32rpx;
  }
  
  .popup-text {
    font-size: 24rpx;
    line-height: 36rpx;
  }
  
  .serial-number-input input,
  .calculate-button {
    max-width: 300rpx;
  }
}
